<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/back"
    tools:context="com.example.newu.exa_ui.RegistrationPage">

    <EditText
        android:id="@+id/firstName"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="180dp"
        android:layout_toLeftOf="@+id/lastName"
        android:layout_toStartOf="@+id/lastName"
        android:background="@drawable/edittextdesign"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
        android:ems="10"
        android:gravity="fill"
        android:hint="First Name"
        android:inputType="textNoSuggestions"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittextdesign"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
        android:ems="10"
        android:gravity="fill"
        android:hint="Last Name"
        android:textSize="18dp" />

    <EditText
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/lastName"
        android:layout_alignLeft="@+id/firstName"
        android:layout_alignRight="@+id/lastName"
        android:layout_alignStart="@+id/firstName"
        android:layout_below="@+id/firstName"
        android:layout_marginTop="25dp"
        android:background="@drawable/edittextdesign"
        android:inputType="textEmailAddress"
        android:gravity="fill"
        android:hint="Email"
        android:id="@+id/email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="22dp"
        android:background="@drawable/edittextdesign"
        android:gravity="fill"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/re_enter_password"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/password"
        android:layout_alignLeft="@+id/lastName"
        android:layout_alignStart="@+id/lastName"
        android:background="@drawable/edittextdesign"
        android:gravity="center"
        android:hint="Re-Enter Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="22dp"
        android:background="@drawable/edittextdesign"
        android:gravity="fill"
        android:hint="Phone"
        android:inputType="number" />


    <ImageButton
        android:id="@+id/submitButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:background="@null"
        android:onClick="onSubmitButtonClick"
        android:scaleType="centerCrop"
        android:src="@drawable/submit" />


</RelativeLayout>
