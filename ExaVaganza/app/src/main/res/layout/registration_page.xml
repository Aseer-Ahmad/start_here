<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.newu.exa_ui.RegistrationPage">

    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        android:text="First Name "
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/firstName"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/lastnameTextView"
        android:layout_alignStart="@+id/lastnameTextView"
        android:layout_below="@+id/firstNameTextView"
        android:ems="10"
        android:gravity="center_horizontal"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
        android:inputType="textNoSuggestions"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lastnameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstNameTextView"
        android:layout_alignStart="@+id/firstNameTextView"
        android:layout_below="@+id/firstName"
        android:layout_marginTop="13dp"
        android:text="Last Name"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/lastName"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/lastnameTextView"
        android:layout_alignStart="@+id/lastnameTextView"
        android:layout_below="@+id/lastnameTextView"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lastName"
        android:layout_alignStart="@+id/lastName"
        android:layout_below="@+id/lastName"
        android:layout_marginTop="11dp"
        android:text="Email"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/emailTextView"
        android:layout_alignStart="@+id/emailTextView"
        android:layout_below="@+id/emailTextView"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textEmailAddress"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="12dp"
        android:text="Password"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/re_enterTextView"
        android:layout_alignStart="@+id/re_enterTextView"
        android:layout_below="@+id/passwordTextView"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/re_enterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordTextView"
        android:layout_alignStart="@+id/passwordTextView"
        android:layout_below="@+id/password"
        android:layout_marginTop="17dp"
        android:text="Re-Enter Password"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/re_enter"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/re_enterTextView"
        android:layout_alignStart="@+id/re_enterTextView"
        android:layout_below="@+id/re_enterTextView"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re_enter"
        android:layout_alignStart="@+id/re_enter"
        android:layout_below="@+id/re_enter"
        android:layout_marginTop="15dp"
        android:text="Phone"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/phoneTextView"
        android:layout_alignStart="@+id/phoneTextView"
        android:layout_below="@+id/phoneTextView"
        android:ems="10"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/submitButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignTop="@+id/phoneTextView"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="#DEDEDE"
        android:scaleType="fitCenter"
        android:elevation="100dp"
        android:onClick="onSubmitButtonClick"
        app:srcCompat="@drawable/arrow" />


</RelativeLayout>
